<%- include("../partials/html-head.ejs") %>
<%- include("../partials/nav.ejs") %>

<main>
  <h1><%= title %></h1>
  <table id="list">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>FlightNo</th>
        <th>Departure</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach((flight) => { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departures %></td>
        <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>



